@article{chowdhury_estimation_2021,
	title = {Estimation of land-use/land-cover changes associated with energy footprints and other disturbance agents in the {Upper} {Peace} {Region} of {Alberta} {Canada} from 1985 to 2015 using {Landsat} data},
