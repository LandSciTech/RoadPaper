	year = {2014},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2656.12144},
	keywords = {resource selection functions, survival, habitat quality, Rangifer tarandus caribou, woodland caribou, wolves, species distribution models, ecological trap},
